{
  "name": "exercism-wasm",
  "image": "mcr.microsoft.com/devcontainers/javascript-node:1-18-bullseye",
  "mounts": [
    "source=${localEnv:HOME}/.config/exercism,target=/home/vscode/.exercism-config,type=bind,consistency=cached"
  ],
  "features": {
    "ghcr.io/devcontainers-contrib/features/exercism-cli:1": {},
    "ghcr.io/devcontainers-contrib/features/prettier:1": {},
    "ghcr.io/devcontainers-contrib/features/jest:1": {}
  },
  "initializeCommand": "./.devcontainer/initializeCommand.sh",
  "onCreateCommand": "./.devcontainer/postCreateCommand.sh",
  "customizations": {
    "vscode": {
      "extensions": [
        "wasm-fmt.wasm-fmt",
        "traBpUkciP.vscode-npm-scripts"
      ],
      "settings": {
        "editor.tabSize": 4,
        "terminal.integrated.defaultProfile.linux": "zsh",
        "terminal.integrated.profiles.linux": {
          "bash": {
            "path": "bash",
            "icon": "terminal-bash"
          },
          "zsh": {
            "path": "zsh",
            "icon": "terminal-debian"
          },
          "tmux": {
            "path": "tmux",
            "icon": "terminal-tmux"
          }
        }
      }
    }
  }
}
