{
  "name": "exercism-go",
  "image": "mcr.microsoft.com/devcontainers/go:1-1.21-bullseye",
  "mounts": [
    "source=${localEnv:HOME}/.config/exercism,target=/home/vscode/.exercism-config,type=bind,consistency=cached"
  ],
  "features": {
    "ghcr.io/devcontainers/features/common-utils:2": {
      "installZsh": true,
      "configureZshAsDefaultShell": true,
      "installOhMyZsh": true
    },
    "ghcr.io/devcontainers-contrib/features/zsh-plugins:0": {},
    "ghcr.io/devcontainers-contrib/features/exercism-cli:1": {},
    "ghcr.io/devcontainers/features/go:1": {},
    "ghcr.io/guiyomh/features/gomarkdoc:0": {},
    "ghcr.io/azutake/devcontainer-features/go-packages-install:0": {}
  },
  "initializeCommand": "./.devcontainer/initializeCommand.sh",
  "onCreateCommand": "./.devcontainer/postCreateCommand.sh",
  "customizations": {
    "vscode": {
      "extensions": [
        "wmaurer.change-case",
        "EditorConfig.EditorConfig",
        "exercism.exercism-cli",
        "golang.go",
        "windmilleng.vscode-go-autotest",
        "neverik.go-critic",
        "766b.go-outliner",
        "npxms.hide-gitignored",
        "cweijan.vscode-office",
        "GitHub.vscode-pull-request-github",
        "jrieken.regex-notebook",
        "mutantdino.resourcemonitor"
      ],
      "settings": {
        "editor.tabSize": 4,
        "terminal.integrated.defaultProfile.linux": "zsh",
        "terminal.integrated.profiles.linux": {
          "bash": {
            "path": "bash",
            "icon": "terminal-bash"
          },
          "zsh": {
            "path": "zsh",
            "icon": "terminal-debian"
          },
          "tmux": {
            "path": "tmux",
            "icon": "terminal-tmux"
          }
        }
      }
    }
  }
}
