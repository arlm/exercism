{
  "name": "Exercism:Go",
  "image": "mcr.microsoft.com/devcontainers/go:1-1.21-bullseye",
  "features": {
    "ghcr.io/devcontainers/features/common-utils:2": {
      "installZsh": true,
      "configureZshAsDefaultShell": true,
      "installOhMyZsh": true
    },
    "ghcr.io/devcontainers/features/go:1": {},
    "ghcr.io/devcontainers-contrib/features/exercism-cli:1": {},
    "ghcr.io/guiyomh/features/gomarkdoc:0": {},
    "ghcr.io/azutake/devcontainer-features/go-packages-install:0": {},
    "ghcr.io/itsmechlark/features/1password:1.0.2": {}
  },
  "initializeCommand": "ssh-add ${localEnv:HOME}/.ssh/github_rsa",
  "customizations": {
    "vscode": {
      "extensions": [
        "wmaurer.change-case",
        "EditorConfig.EditorConfig",
        "exercism.exercism-cli",
        "golang.go",
        "windmilleng.vscode-go-autotest",
        "neverik.go-critic",
        "766b.go-outliner",
        "npxms.hide-gitignored",
        "oderwat.indent-rainbow",
        "cweijan.vscode-office",
        "GitHub.vscode-pull-request-github",
        "jrieken.regex-notebook"
      ],
      "settings": {
        "editor.tabSize": 4,
        "terminal.integrated.defaultProfile.linux": "zsh",
        "terminal.integrated.profiles.linux": {
          "bash": {
            "path": "bash",
            "icon": "terminal-bash"
          },
          "zsh": {
            "path": "zsh",
            "icon": "terminal-debian"
          },
          "fish": {
            "path": "fish",
            "icon": "terminal-linux"
          },
          "tmux": {
            "path": "tmux",
            "icon": "terminal-tmux"
          },
          "pwsh": {
            "path": "pwsh",
            "icon": "terminal-powershell"
          }
        }
      }
    }
  }
}