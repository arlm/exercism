{
  "name": "exercism-gleam",
  "image": "mcr.microsoft.com/devcontainers/base:alpine",
  "mounts": [
    "source=${localEnv:HOME}/.config/exercism,target=${containerEnv:HOME}/.config/exercism,type=bind,consistency=cached"
  ],
  "features": {
    "ghcr.io/devcontainers/features/common-utils:2": {
      "installZsh": true,
      "configureZshAsDefaultShell": true,
      "installOhMyZsh": true
    },
    "ghcr.io/devcontainers-contrib/features/zsh-plugins:0": {},
    "ghcr.io/devcontainers-contrib/features/exercism-cli:1": {}
  },
  "remoteEnv": {
    "PATH": "${containerEnv:PATH}:${containerEnv:HOME}/.cargo/bin"
  },
  "initializeCommand": "./.devcontainer/initializeCommand.sh",
  "onCreateCommand": "./.devcontainer/postCreateCommand.sh",
  "customizations": {
    "vscode": {
      "extensions": [
        "wmaurer.change-case",
        "EditorConfig.EditorConfig",
        "exercism.exercism-cli",
        "npxms.hide-gitignored",
        "oderwat.indent-rainbow",
        "cweijan.vscode-office",
        "GitHub.vscode-pull-request-github",
        "jrieken.regex-notebook",
        "mutantdino.resourcemonitor"
      ],
      "settings": {
        "editor.tabSize": 4,
        "terminal.integrated.defaultProfile.linux": "zsh",
        "terminal.integrated.profiles.linux": {
          "bash": {
            "path": "bash",
            "icon": "terminal-bash"
          },
          "zsh": {
            "path": "zsh",
            "icon": "terminal-debian"
          },
          "fish": {
            "path": "fish",
            "icon": "terminal-linux"
          },
          "tmux": {
            "path": "tmux",
            "icon": "terminal-tmux"
          },
          "pwsh": {
            "path": "pwsh",
            "icon": "terminal-powershell"
          }
        }
      }
    }
  }
}